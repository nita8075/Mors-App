<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tuan_muda.cobalagi.awal"
    android:background="@android:color/holo_orange_light"
    >

    <Button
        android:id="@+id/btnCahaya"
        android:layout_width="250dp"
        android:layout_height="44dp"
        android:onClick="onClick"
        android:text="ALPHA KE CAHAYA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_editor_absoluteX="8dp"
        app:layout_editor_absoluteY="187dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintVertical_bias="0.38" />

    <Button
        android:id="@+id/btnMorse"
        android:layout_width="250dp"
        android:layout_height="44dp"
        android:onClick="onClick"
        android:text="ALPHA KE MORSE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_editor_absoluteX="8dp"
        app:layout_editor_absoluteY="187dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintVertical_bias="0.61" />

    <Button
        android:id="@+id/btnAlpa"
        android:layout_width="250dp"
        android:layout_height="44dp"
        android:onClick="onClick"
        android:text="MORSE KE ALPA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_editor_absoluteX="8dp"
        app:layout_editor_absoluteY="187dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintVertical_bias="0.5" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/asafasfsdgfsd"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>
